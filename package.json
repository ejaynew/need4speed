{
    "name": "need4speed",
    "version": "1.0.0",
    "description": "\"# need4speed\"",
    "main": "app.js",
    "scripts": {
        "build": "BUILD_PATH='./dist' react-scripts build",
        "clean": "rimraf dist",
        "style": "prettier --write \"src/**/*.{ts,tsx}\"",
        "prepare": "husky install",
        "dev": "PORT=8080 react-scripts start",
        "watch": "npm-watch",
        "server": "node server.mjs",
        "start": "concurrently \"npm run server\" \"npm run watch\"",
        "web": "concurrently \"npm run server\" \"npm run dev\""
    },
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "ts,tsx"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ejaynew/need4speed.git"
    },
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.20.1",
        "chatgpt": "^5.1.2",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "dotenv-safe": "^8.2.0",
        "express": "^4.18.2",
        "node-fetch": "^3.3.0",
        "npm-watch": "^0.11.0",
        "ora": "^6.1.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "^5.0.1"
    },
    "devDependencies": {
        "@types/chrome": "0.0.158",
        "@types/react": "^18.0.29",
        "@types/react-dom": "^18.0.11",
        "concurrently": "^7.6.0",
        "copy-webpack-plugin": "^9.0.1",
        "dotenv-webpack": "^8.0.1",
        "husky": "^8.0.3",
        "node-polyfill-webpack-plugin": "^2.0.1",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.3",
        "rimraf": "^3.0.2 ",
        "ts-loader": "^8.0.0",
        "typescript": "^4.4.3 ",
        "webpack": "^5.76.0",
        "webpack-cli": "^4.0.0",
        "webpack-merge": "^5.0.0"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
